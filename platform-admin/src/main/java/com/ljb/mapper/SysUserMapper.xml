                t.`create_time` BETWEEN #{stime} AND #{etime}
            </if>
            <if test="offset != null">
                sr.`id`=sur.`role_id` AND sur.`user_id` = t.`id` AND sr.`name`='教师'
            </if>
        </where>
        <choose>
            <when test="sort != null and order != null">
