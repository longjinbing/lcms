    <sql id="Base_Column_List">
	    `id`,    	    `name`,    	    `remark`,    	    `create_time`,    	    `create_id`,    	    `is_delete`,    	    `status`,    	    `update_time`,    	    `update_id`      	</sql>

</mapper>
