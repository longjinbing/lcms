    <select id="selectMapById" resultMap="DetailsMap">
        SELECT
                t.`id` ,            t.`goods_id` ,            t.`img_url` ,            t.`img_desc` ,            t.`order_num` ,            t.`is_delete` ,            t.`status` ,            t.`create_id` ,            t.`create_time` ,            t.`update_id` ,            t.`update_time`                     ,s.`username` as createName,
        s2.`username` as updateName
        FROM shop_goods_gallery t left join sys_user s on s.`id`= t.`create_id` LEFT JOIN sys_user s2 ON s2.`id`=t.`update_id`
