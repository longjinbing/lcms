    <update id="updateByIdSelective" parameterType="com.ljb.entity.Log">
        update sys_log
        <set>
            <if test="operation != null">
                `operation` = #{operation},
            </if>
            <if test="method != null">
                `method` = #{method},
            </if>
            <if test="params != null">
                `params` = #{params},
            </if>
            <if test="isDelete != null">
                `is_delete` = #{isDelete},
            </if>
            <if test="ip != null">
                `ip` = #{ip},
            </if>
            <if test="createId != null">
                `create_id` = #{createId},
            </if>
            <if test="createTime != null">
                `create_time` = #{createTime},
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},
            </if>
            <if test="updateId != null">
                `update_id` = #{updateId},
            </if>
            <if test="url != null">
                `url` = #{url},
            </if>
            <if test="remark != null">
                `remark` = #{remark},
            </if>
            <if test="level != null">
                `level` = #{level},
            </if>
            <if test="errorStack != null">
                `error_stack` = #{errorStack},
            </if>
            <if test="status != null">
                `status` = #{status}
            </if>
        </set>
        where id = #{id}
    </update>
    <insert id="saveBatch" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
        INSERT INTO sys_log
        (
        `id` ,
        `operation` ,
        `method` ,
        `params` ,
        `is_delete` ,
        `ip` ,
        `create_id` ,
        `create_time` ,
        `update_time` ,
        `update_id` ,
        `url` ,
        `remark` ,
        `level` ,
        `error_stack` ,
        `status` )
        values
        <foreach item="item" index="index" collection="list"
                 separator=",">
            (
            #{item.id},
            #{item.operation},
            #{item.method},
            #{item.params},
            #{item.isDelete},
            #{item.ip},
            #{item.createId},
            #{item.createTime},
            #{item.updateTime},
            #{item.updateId},
            #{item.url},
            #{item.remark},
            #{item.level},
            #{item.errorStack},
            #{item.status} )
        </foreach>
    </insert>

