            update sys_log
            <set>
                <if test="item.id != null">`id` =
                    #{item.id} ,
                </if>
                <if test="item.operation != null">`operation` =
                    #{item.operation} ,
                </if>
                <if test="item.method != null">`method` =
                    #{item.method} ,
                </if>
                <if test="item.params != null">`params` =
                    #{item.params} ,
                </if>
                <if test="item.isDelete != null">`is_delete` =
                    #{item.isDelete} ,
                </if>
                <if test="item.ip != null">`ip` =
                    #{item.ip} ,
                </if>
                <if test="item.createId != null">`create_id` =
                    #{item.createId} ,
                </if>
                <if test="item.createTime != null">`create_time` =
                    #{item.createTime} ,
                </if>
                <if test="item.updateTime != null">`update_time` =
                    #{item.updateTime} ,
                </if>
                <if test="item.updateId != null">`update_id` =
                    #{item.updateId} ,
                </if>
                <if test="item.url != null">`url` =
                    #{item.url} ,
                </if>
                <if test="item.remark != null">`remark` =
                    #{item.remark} ,
                </if>
                <if test="item.level != null">`level` =
                    #{item.level} ,
                </if>
                <if test="item.errorStack != null">`error_stack` =
                    #{item.errorStack} ,
                </if>
                <if test="item.status != null">`status` =
                    #{item.status}
                </if>
            </set>
            where `id` = #{item.id}
